@model Philane.Models.Users
@{
    ViewBag.Title = "Login";
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content" align="center">

      
        <div class="row">
            <div class="col-md-16" style="border:double">
                <section id="loginForm">
                    @using (Html.BeginForm())
                    {
                        
                        @Html.AntiForgeryToken()
                        <h2>Login</h2>
                        <h4>Use your surname to login</h4>
                        <hr />
                        <h4 style="color:red">@ViewBag.Error</h4>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div  >
                            <div>
                                @Html.TextBoxFor(m => m.surname, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.surname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div>
                                <input type="submit" value="Log in" class="btn btn-default" />
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>


 